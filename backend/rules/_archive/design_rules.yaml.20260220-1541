defaults:
  cv: 40

rules:
  - id: NTI
    priority: 100
    when:
      nti: true
    design: "replicate"
    message: "NTI flag implies tighter limits; replicate design recommended."
  - id: CV_HIGH
    priority: 80
    when:
      cv_min: 50
    design: "replicate"
    message: "High variability (>50%) -> replicate design with scaled BE."
  - id: CV_MED
    priority: 60
    when:
      cv_min: 30
      cv_max: 50
    design: "2x2 crossover"
    message: "Moderate variability (30-50%) -> 2x2, consider replicate if HVD."
  - id: CV_LOW
    priority: 40
    when:
      cv_max: 30
    design: "2x2 crossover"
    message: "Low variability (CV<=30%) -> standard 2x2 crossover."
  - id: DEFAULT
    priority: 0
    design: "2x2 crossover"
    message: "Default to 2x2 crossover when no rule matches."
